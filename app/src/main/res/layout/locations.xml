<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/locations3"
    tools:context=".Locations">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello!"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to YoParker"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/currentLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:text="Your Current Locations"
        android:textSize="16sp"
        android:drawableLeft="@drawable/group77"
        app:cornerRadius="100dp"
        android:layout_marginTop="100dp"/>

    <com.google.android.material.button.MaterialButton
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:text="Some  Other  Locations"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/group78"
        app:cornerRadius="100dp"
        app:strokeColor="@color/red"
        />

</LinearLayout>